<?xml version="1.0" encoding="UTF-8"?>

<Shell x:Class="OAuthMAUI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:OAuthMAUI"
       Shell.FlyoutBehavior="Disabled"
       Title="OAuthMAUI">

	<TabBar>
        <Tab Title="DROPBOX">
            <ShellContent ContentTemplate="{DataTemplate local:DropBoxPage}"
			              Route="DropBoxPage" />
		</Tab>
		<Tab Title="GOOGLEDRIVE">
			<ShellContent ContentTemplate="{DataTemplate local:GoogleDrivePage}"
			              Route="GoogleDrivePage" />
		</Tab>
		<Tab Title="ONEDRIVE">
			<ShellContent ContentTemplate="{DataTemplate local:OneDrivePage}"
			              Route="OneDrivePage" />
		</Tab>
	</TabBar>
</Shell>